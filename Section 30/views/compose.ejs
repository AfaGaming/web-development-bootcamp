<%- include ("partials/header"); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <div class="mb-3">
            <label for="titleText" class="form-label">Title</label>
            <input type="text" name="postTitle" id="titleText" class="form-control">
        </div>
        <div class="mb-3">
            <label for="contentText" area="form-label">Post</label>
            <textarea name="postBody" id="contentText" cols="30" rows="10" class="form-control"></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include ("partials/footer"); -%>